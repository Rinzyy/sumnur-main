rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if true;
    }
    match /UsersFuel/{UserUID}{
     allow read,write: if request.auth != null && request.auth.uid == UserUID;
    }
    match /Users/{UserUID}{
     allow read,write: if request.auth != null && request.auth.uid == UserUID;
    }
    match /Editor{
    	match /EmailConversion/{UserUID} {
     allow read,write: if request.auth != null && request.auth.uid == UserUID; 
      }
      match /Spelling_Grammar/{UserUID} {
     allow read,write: if request.auth != null && request.auth.uid == UserUID; 
      }
      match /Rephraser/{UserUID} {
     allow read,write: if request.auth != null && request.auth.uid == UserUID; 
      }
    }
    
    
  }
}